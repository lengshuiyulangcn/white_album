<div class="container">
    <h1 class="text-center text-primary title">所有相册</h1>
    <hr class="divider-title">
        
    <% @albums.each do |album| %>
      <div class="col-ms-10 col-md-4">
	  <div class="project">
            <figure class="img-responsive">
              <% unless album.photos.empty? %>
                <%=link_to image_tag(album.photos.first.image.thumb), album%>
              <% else %>
                <%=link_to image_tag("/no_image.png"), album%>
              <% end %>
		  <figcaption>
		  <span class="project-details"><%= album.name %></span>
		  <span class="project-price"><strong><%=album.photos.length%></strong></span>
                  <span class="project-creator"><%= album.description %></span>
		  </figcaption>
	      </figure>
	  </div>
      </div>
    <% end %>
    
</div>    			                                  
<%= link_to 'New Album', new_album_path %>
