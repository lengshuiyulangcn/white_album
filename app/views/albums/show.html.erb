<div class="container">
  <div class="panel panel-default">
      <div class="panel-heading" style="padding: 0">
        <ol class="breadcrumb">
          <li><%=link_to "主页", root_path %></li>
          <li><%=link_to "全部相册", albums_path %></li>
          <li class="active"><%= @album.name %></li>
        </ol>
      </div>
      <div class="panel-body">
        <span style="font-size: 18px"><%= @album.description %></span>
     	 </div>
      <div style="margin-left: 10%;margin-right: 10%; margin-bottom: 5%">
      <div id="lightgallery">
	<% @album.photos.each do |photo| %>
	  <%=link_to image_tag(photo.image.thumb), photo.image.to_s %>
	<% end %>
      </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
    $(document).ready(function() {
        $("#lightgallery").lightGallery(); 
    });
</script>
<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>
