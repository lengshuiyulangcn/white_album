<div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'login'}) do |f| %>
  <fieldset>
  	<legend class="legend">登录</legend>
    
    <div class="input">
    	<%= f.email_field :email, placeholder: "Email", required: true, autofocus: true %>
      <span><i class="fa fa-envelope-o"></i></span>
    </div>
    
    <div class="input">
    	<%= f.password_field :password, placeholder: "Password", required: true, autofocus: true %>
      <span><i class="fa fa-lock"></i></span>
    </div>
    
    <button type="submit" class="submit"><i class="fa fa-long-arrow-right"></i></button>
    
  </fieldset>
<% end %>
</div>
  
